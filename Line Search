static void Main(string[] arg)
        {
            int search, i; // dekl. zmiennych całkowitych;
            string text; // dekl. zmiennej typu string. 
            int[] arr = new int[] { 12, 14, 17, 9, 7, 4, 13, 57, 89, 0 }; // dekl. tablicy oraz wypisanie w niej elementów.
            bool contains = false; // Deklaracja zmiennej 'contains' typu boolean czyli zmienna sprawdza prawda/fałsz true or false. 

            for(i = 0; i < arr.Length; i ++)
            {
                Console.WriteLine($"{i}. {arr[i]}");
            } // Wyświetlenie w tablicy

            Console.WriteLine($"Please provide numbwer you are looking for ");

            text = Console.ReadLine();

            if (!int.TryParse(text, out search))
            {
                Console.WriteLine();
                Console.ReadKey();
            }

            for (i = 0; i < arr.Length; i++) // Pętla 'for' czyli wejście do tablicy
            {
                if(search == arr[i])  
                {
                    contains = true;
                    break;
                } 
              
            }  // Sprawdzenie czy wprowadzony element znajduje się w tablicy

            if (contains == true)
                Console.WriteLine($"Searching number {search} existing in the array on the position {i}"); 

            else
                Console.WriteLine($"Searching Number do not exist in array");

            Console.ReadKey(true);

        } 
