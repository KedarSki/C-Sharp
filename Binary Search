 Console.WriteLine("Please provide looking value: ");

            text = Console.ReadLine();             

           int top = 0;

           int mid;

            int bottom = vector.Length - 1;

            int search;
            
            if(!int.TryParse(text, out search)) 
            {
                Console.WriteLine();
                Console.ReadKey();
            }


            //Binary search

                while (true)
                {
                    if(top>bottom)
                {
                    Console.WriteLine("Podana wartość nie istnieje w wektorze");

                    break;
                }

                    
                    mid = (bottom + top) / 2; j
                if (vector[mid] == search) 

                {
                    Console.WriteLine($"Szukana wartość, znajduje się w indeksie nr. { mid}");
                    break;
                }


                if (vector[mid] > search) 
                    {
                        bottom = mid - 1;
                    }
                  else
                    {
                        top = mid + 1;
                    }
